<h1>Add a New Adobtable Pet</h1>
<p>
  <%= link_to "Pet Index", "/pets" %>
  <%= link_to "Shelter Index", "/shelters" %>
</p>

<%= form_tag "/shelters/#{@shelter_id}/pets" do %>
<%= label_tag :image %>
<%= text_field_tag :image %>
<%= label_tag :name %>
<%= text_field_tag :name %>
<%= label_tag :description %>
<%= text_field_tag :description %>
<%= label_tag :age %>
<%= text_field_tag :age %>
<%= label_tag :sex %>
<%= text_field_tag :sex %>
<%= submit_tag "Create Pet" %>
<% end %>
